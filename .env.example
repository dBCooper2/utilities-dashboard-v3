# Environment variables
# Replace the placeholders with your actual API keys

# EIA API (Energy Information Administration)
# Sign up at: https://www.eia.gov/opendata/register.php
EIA_API_KEY=your_eia_api_key_here

# NREL API (National Renewable Energy Laboratory)
# Sign up at: https://developer.nrel.gov/signup/
NREL_API_KEY=your_nrel_api_key_here

# OpenEI API (Open Energy Information)
# Sign up at: https://openei.org/services/api/signup
OPENEI_API_KEY=your_openei_api_key_here

# Database connection (if using Postgres)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=energy_dashboard
DB_USER=postgres
DB_PASSWORD=your_password_here

# Timezone for data processing
DEFAULT_TIMEZONE=US/Eastern 